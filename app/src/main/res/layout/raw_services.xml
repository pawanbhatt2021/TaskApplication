<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
<variable
    name="data"
    type="com.example.taskapplication.presentation.home.model.TopServices" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_padding16"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgService"
            android:layout_width="160dp"
            android:layout_height="120dp"
            image="@{data.image}"
            app:shapeAppearanceOverlay="@style/Shape_TL_BR"
            app:srcCompat="@drawable/top_service_img1"
            android:scaleType="centerCrop" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtName"
            style="@style/TextAppearance.MyTheme.SemiBold_14"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_padding12"
            android:text="@{data.serviceName}"
            tools:text="@string/ac_services"
            android:ellipsize="end"
            android:maxLines="2"
            app:layout_constraintStart_toStartOf="@id/txtLocation"
            app:layout_constraintTop_toBottomOf="@id/txtLocation" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>